<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <corners android:radius="180dp" />
        <solid android:color="@color/white" />
    </shape>
</item>
<item
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp"
    android:top="2dp">
    <shape android:shape="rectangle">
        <corners android:radius="180dp" />
        <gradient
            android:startColor="@color/MethodOfExecution2"
            android:endColor="@color/MethodOfExecution1"
            android:angle="90"/>
    </shape>
</item>

    <item
        android:right="170dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:right="90dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <gradient
                android:startColor="@color/MethodOfExecution2"
                android:endColor="@color/MethodOfExecution1"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>